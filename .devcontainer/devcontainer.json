{
    "name": "Photolog",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    // photolog フォルダをコンテナのルートとして認識させる
    "workspaceFolder": "/workspaces/photolog",
    "runArgs": [
        "--env-file", ".env",
        "--label", "my-app=photolog"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "amazonwebservices.aws-toolkit-vscode"
            ]
        }
    },
    "remoteUser": "vscode",
    "containerEnv": {
        "TZ": "Asia/Tokyo"
    }
}